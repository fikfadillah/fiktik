<div id="loading-state" class="hidden">
    <div class="processing-text">PROCESSING...</div>
    <div class="progress-bar">
        <div class="progress-fill"></div>
    </div>
</div>

<style>
    .hidden {
        display: none;
    }

    #loading-state {
        margin: 2rem 0;
        border: 4px solid #000;
        padding: 2rem;
    }

    .processing-text {
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 1rem;
        animation: blink 1s infinite;
    }

    .progress-bar {
        width: 100%;
        height: 40px;
        border: 4px solid #000;
        background: #fff;
        position: relative;
    }

    .progress-fill {
        height: 100%;
        background: #000;
        width: 0%;
        animation: load 2s infinite ease-in-out;
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    @keyframes load {
        0% {
            width: 0%;
        }
        50% {
            width: 70%;
        }
        100% {
            width: 100%;
        }
    }
</style>
