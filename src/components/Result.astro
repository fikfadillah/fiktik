<div id="result-section" class="hidden">
    <!-- Success State -->
    <div id="success-content">
        <!-- Single Result Card -->
        <div class="result-card">
            <div class="video-preview">
                <video id="video-player" controls loop playsinline></video>
            </div>

            <div class="meta-info">
                <h3 id="video-author">@USERNAME</h3>
                <p id="video-desc">Video Description</p>
            </div>

            <div class="action-buttons">
                <a id="download-mp4" class="btn-action primary" download>
                    DOWNLOAD MP4
                </a>
                <!-- MP3 Button -->
                <!-- <a id="download-mp3" class="btn-action secondary" download>
                    DOWNLOAD MP3
                </a> -->
            </div>

            <div id="auto-download-msg" class="auto-msg">
                DOWNLOAD STARTED AUTOMATICALLY...
            </div>
        </div>

        <!-- Batch Container -->
        <div id="batch-results-container" style="display: none;"></div>
    </div>

    <!-- Error State -->
    <div id="error-content" class="hidden">
        <div class="error-box">
            <h3>ERROR.</h3>
            <p id="error-message">INVALID OR PRIVATE VIDEO.</p>
        </div>
    </div>
</div>

<style is:global>
    /* ... (Global styles needed for dynamic content) ... */
    .hidden {
        display: none !important;
    }

    #result-section {
        margin-top: 2rem;
        /* border: 4px solid #000; Removed border from wrapper so cards can have their own borders */
        /* padding: 2rem; */
        /* background: #fff; */
    }

    .result-card {
        border: 4px solid #000;
        padding: 2rem;
        background: #fff;
        margin-bottom: 2rem;
    }

    .video-preview {
        margin-bottom: 1.5rem;
        background: #000;
        border: 4px solid #000;
    }

    .video-wrapper {
        margin-bottom: 1rem;
        background: #000;
        border: 4px solid #000;
    }

    video {
        width: 100%;
        max-height: 500px;
        display: block;
    }

    .meta-info {
        margin-bottom: 2rem;
        border-bottom: 4px solid #000;
        padding-bottom: 1rem;
    }

    .action-buttons {
        display: grid;
        gap: 1rem;
    }

    .btn-action {
        display: block;
        padding: 1rem;
        text-align: center;
        font-weight: 700;
        text-transform: uppercase;
        border: 4px solid #000;
        cursor: pointer;
        background: #fff;
        color: #000;
        text-decoration: none;
    }

    .btn-action:hover {
        background: #000;
        color: #fff;
    }

    .btn-action.primary {
        background: #000;
        color: #fff;
    }

    .btn-action.primary:hover {
        background: #fff;
        color: #000;
    }

    .auto-msg {
        margin-top: 1rem;
        font-size: 0.9rem;
        text-align: center;
        opacity: 0.7;
        display: none;
    }

    .error-box {
        background: #000;
        color: #fff;
        padding: 2rem;
        text-align: center;
        margin-top: 2rem;
    }

    .error-box h3 {
        color: #fff;
    }
</style>
