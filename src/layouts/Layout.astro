---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Download TikTok videos without watermark. Fast, free, and no redirects."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="container">
            <slot />
        </div>
        <footer>
            <p>&copy; 2026 M TAUFIK FADILLAH ✍️ <br /> ALL RIGHTS RESERVED.</p>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --bg-color: #ffffff;
        --text-color: #000000;
        --border-width: 4px;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html,
    body {
        height: 100%;
        font-family: "Space Mono", monospace;
        background-color: var(--bg-color);
        color: var(--text-color);
        line-height: 1.5;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        flex: 1;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    h1 {
        font-size: clamp(2.5rem, 8vw, 4rem);
        letter-spacing: -2px;
        margin-bottom: 0.5rem;
    }

    p {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    button {
        font-family: inherit;
        cursor: pointer;
        border: var(--border-width) solid var(--text-color);
        background: var(--bg-color);
        color: var(--text-color);
        font-weight: 700;
        text-transform: uppercase;
        transition: all 0.1s;
    }

    button:hover,
    button:focus {
        background: var(--text-color);
        color: var(--bg-color);
    }

    button:active {
        transform: translateY(2px);
    }

    input[type="text"],
    input[type="url"] {
        width: 100%;
        padding: 1rem;
        font-family: inherit;
        font-size: 1.25rem;
        border: var(--border-width) solid var(--text-color);
        background: var(--bg-color);
        color: var(--text-color);
        border-radius: 0;
        outline: none;
        font-weight: 700;
    }

    input::placeholder {
        color: #000000;
        opacity: 0.4;
        text-transform: uppercase;
    }

    /* input:focus {
        background: var(--text-color);
        color: var(--bg-color);
    } 
    
    input:focus::placeholder {
        color: #ccc;
    } */

    /* Utility classes */
    .brutal-border {
        border: var(--border-width) solid var(--text-color);
    }

    .btn-large {
        padding: 1rem 2rem;
        font-size: 1.5rem;
        width: 100%;
        display: block;
        margin-top: 1rem;
    }

    footer {
        padding: 2rem;
        text-align: center;
        border-top: var(--border-width) solid var(--text-color);
        font-size: 0.9rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
        width: 12px;
    }
    ::-webkit-scrollbar-track {
        background: var(--bg-color);
        border-left: var(--border-width) solid var(--text-color);
    }
    ::-webkit-scrollbar-thumb {
        background: var(--text-color);
    }
</style>
